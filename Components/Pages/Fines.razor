@page "/fines"
@attribute [Authorize(Roles="admin,manager")]

<PageTitle>Fines</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Fines" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton Text="Export to Excel" Click="@(() => ExportFinesToExcel(fines))" ButtonStyle="Radzen.ButtonStyle.Primary" />
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn SizeMD="12">
            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                Data="@fines" TItem="TrackFlow.Models.dbforall.Fine" RowSelect="@EditRow" AllowColumnPicking="true" AllowColumnReorder="true" AllowColumnResize="true" AllowCompositeDataCells="true">
                <Columns>
                    <RadzenDataGridColumn TItem="TrackFlow.Models.dbforall.Fine" Property="FineID" Title="ID" Width="70px" >
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TrackFlow.Models.dbforall.Fine" Property="RecordID" Title="Reference ID" Width="80px">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TrackFlow.Models.dbforall.Fine" Property="ViolationType1.ViolationName" Title="Violation" Width="100px">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TrackFlow.Models.dbforall.Fine" Property="AspNetUser.UserName" Title="UserName" Width="100px">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TrackFlow.Models.dbforall.Fine" Property="Description" Title="Description" Width="500px">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TrackFlow.Models.dbforall.Fine" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                        <Template Context="fine">
                            <RadzenButton ButtonStyle="Radzen.ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                Shade="Shade.Lighter" Variant="Variant.Flat"
                                Click=@(args => GridDeleteButtonClick(args, fine)) @onclick:stopPropagation="true" />
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
    
        <RadzenColumn Size="12" Style="margin-top: 1rem">
            <RadzenButton Text="Delete All Fines" Click="@DeleteAllFines" ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium" />
        </RadzenColumn>
        
    </RadzenRow>
</RadzenStack>
